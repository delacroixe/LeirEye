# Configuración para desarrollo - Auto-setup

# Database
DATABASE_URL=postgresql+asyncpg://leireye:leireye_secret@localhost:5432/leireye
DATABASE_SYNC_URL=postgresql://leireye:leireye_secret@localhost:5432/leireye

# Debug
DEBUG=true

# Tokens - Duración en desarrollo
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=30

# Seed de usuario por defecto en desarrollo
# Email: dev@example.com | Password: DevPass123
SEED_DEFAULT_USER=true
