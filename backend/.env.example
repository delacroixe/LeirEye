# LeirEye Environment Configuration
# Copy this file to .env and adjust values

# Database
DATABASE_URL=postgresql+asyncpg://LeirEye:LeirEye_secret@localhost:5432/LeirEye
DATABASE_SYNC_URL=postgresql://LeirEye:LeirEye_secret@localhost:5432/LeirEye

# Redis (for future use)
REDIS_URL=redis://localhost:6379

# Security
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# API
API_V1_PREFIX=/api
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:3001","http://localhost:5173"]

# Ollama (AI)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:latest

# LiteLLM (AI Observability - Optional)
USE_LITELLM=false
# LITELLM_API_BASE=http://localhost:11434
# LANGFUSE_PUBLIC_KEY=pk-lf-...
# LANGFUSE_SECRET_KEY=sk-lf-...
# LANGFUSE_HOST=https://cloud.langfuse.com

# App
APP_NAME=LeirEye
APP_VERSION=2.0.0
DEBUG=true
