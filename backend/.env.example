# LeirEye Environment Configuration
# Copy this file to .env and adjust values

# Database
DATABASE_URL=postgresql+asyncpg://LeirEye:LeirEye_secret@localhost:5432/LeirEye
DATABASE_SYNC_URL=postgresql://LeirEye:LeirEye_secret@localhost:5432/LeirEye

# Redis (for future use)
REDIS_URL=redis://localhost:6379

# Security
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# API
API_V1_PREFIX=/api
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:3001","http://localhost:5173"]

# Ollama (AI)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:3b

# App
APP_NAME=LeirEye
APP_VERSION=2.0.0
DEBUG=true
